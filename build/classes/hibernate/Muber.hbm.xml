<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="modelo">
<class name="Viaje" table="viaje">
	
	<id name="id" type="long" column="idViaje" >
			 <generator class="native"/>
	 </id>
	
	<list name="pasajeros" cascade="all">
			<key column="idPasajeroMuber" />
			<index column ="indexPasajeroMuber" />
			<one-to-many class="Pasajero"/>
	</list>
	
	<list name="conductores" cascade="all">
			<key column="idConductorMuber" />
			<index column ="indexConductorMuber" />
			<one-to-many class="Conductor"/>
	</list>
	
	<list name="viajes" cascade="all">
			<key column="idViajeMuber" />
			<index column ="indexViajeMuber" />
			<one-to-many class="Viaje"/>
	</list>
	
</class>
</hibernate-mapping>
